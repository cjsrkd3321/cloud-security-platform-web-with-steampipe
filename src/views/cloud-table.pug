extends base
include mixins/row

block content
    div(style="display: flex; flex-direction: column; align-items: center;")
        h3 #{complianceResult.title}
        h4 Last updated : #{complianceResult.createdAt}
        table(style="border: 0;")
            thead
                each result, index in complianceResult.results
                    if !index
                        each val, key in result
                            if key != '_id'
                                th(style="text-align: center;")=key
                            else
                                th(style="text-align: center;") exception
            each result in complianceResult.results 
                +row(complianceResult.title, result)
            else 
                h3 Result not found.